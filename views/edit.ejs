<%-include("partials/header.ejs")%>

<main class="form-container">
  <div class="form">
    <h2>Create Blog</h2>
    <form action="/submit1" method="POST">
        <input type="hidden" name="index" value="<%=index%>">
      <div class="input-group">
        <label for="title">Title</label>
        <input type="text" name="new_title" placeholder="Enter the title" value="<%=title%>"  required>
      </div>
      <div class="input-group">
        <label for="author_name">Caption</label>
        <input type="text" name="new_author_name"  placeholder="Enter your name" value="<%=author_name%>"  required>
      </div>
      <div class="input-group">
        <label for="description">Description</label>
        <textarea name="new_description"  placeholder="Enter blog description" required><%=description%></textarea>
      </div>
      <button type="submit" class="submit-btn">Submit</button>
    </form>
  </div>
</main>

<%-include("partials/footer.ejs")%>
