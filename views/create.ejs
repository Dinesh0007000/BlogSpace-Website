<%-include("partials/header.ejs")%>

<main class="form-container">
  <div class="form">
    <h2>Create Blog</h2>
    <form action="/submit" method="POST">
      <div class="input-group">
        <label for="title">Title</label>
        <input type="text" name="title" placeholder="Enter the title" required>
      </div>
      <div class="input-group">
        <label for="author_name">Caption</label>
        <input type="text" name="author_name"  placeholder="Enter your name" required>
      </div>
      <div class="input-group">
        <label for="description">Description</label>
        <textarea name="description"  placeholder="Enter blog description" required></textarea>
      </div>
      <button type="submit" class="submit-btn">Submit</button>
    </form>
  </div>
</main>

<%-include("partials/footer.ejs")%>
