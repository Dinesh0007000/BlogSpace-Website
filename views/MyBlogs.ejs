<%-include("partials/header.ejs")%>

<%if(locals.titles && locals.author_names && locals.descriptions){%>
    <div class="header">
        <h1>BlogSpace</h1>
        <a href="/home1"><h3>Home</h3></a>
        <a href="/create1"><h3>Create Blogs</h3></a>
        <a href="/MyBlogs"><h3>My Blogs</h3></a>
    </div>
    <hr>
    <div class="blogs">
        <div><h1>My Blogs</h1></div>
        <div class="blog_details">
            <%for(let i=0;i<titles.length;i++){%>
                <div>
                    <h2><%=titles[i]%></h2>
                    <h3><%=author_names[i]%></h3>
                    <div>
                        <a href="/edit?index=<%=i%>"><div class="edit">Edit</div></a>
                        <a href="/delete?title=<%= titles[i] %>"><div class="delete">Delete</div></a>
                        <a href="/blogPage?index=<%=i%>"><div class="view">View</div></a>
                    </div>
                </div>    
            <%}%>
            
        </div>
    </div>

<%}%>

<%-include("partials/footer.ejs")%>